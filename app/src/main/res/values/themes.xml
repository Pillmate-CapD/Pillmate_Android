<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Pillmate" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Pillmate" parent="Base.Theme.Pillmate" />

    <style name="CustomBottomNavTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/notosanskrmedium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">9sp</item>
    </style>

    <style name="CustomCircularProgressIndicator" parent="Widget.Material3.CircularProgressIndicator">
        <item name="indicatorColor">@drawable/progress_gradient</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:background">@drawable/bg_btsheet_round12</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:backgroundDimEnabled">true</item> <!-- 배경 어둡게 활성화 -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_btsheet_round12</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:backgroundDimEnabled">true</item> <!-- 배경 어둡게 활성화 -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:statusBarColor">#1E54DF</item> <!-- 원하는 색상으로 설정 -->
    </style>
</resources>