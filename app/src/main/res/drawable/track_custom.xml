<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <!-- 활성화된 상태의 track -->
        <shape android:shape="rectangle">
            <corners android:radius="30dp" /> <!-- 둥근 모서리 -->
            <solid android:color="#08D2C8" /> <!-- 파란색 배경 -->
            <size android:width="50dp" android:height="31dp"/> <!-- track 크기 -->
        </shape>
    </item>
    <item android:state_checked="false">
        <!-- 비활성화된 상태의 track -->
        <shape android:shape="rectangle">
            <corners android:radius="30dp" />
            <solid android:color="#29787880" /> <!-- 회색 배경 -->
            <size
                android:width="50dp"
                android:height="31dp" /> <!-- track 크기 -->
        </shape>
    </item>
</selector>