<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Spinner가 눌렸을 때의 상태 -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- 클릭 시 배경 색 -->
            <corners android:radius="8dp"/> <!-- 라운드 처리 -->
            <stroke android:width="1dp" android:color="#08D2C8"/> <!-- 테두리 색상 -->
        </shape>
    </item>

    <!-- 기본 상태 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- 기본 배경 색 -->
            <corners android:radius="8dp"/> <!-- 라운드 처리 -->
            <stroke android:width="1dp" android:color="#BDBDBD"/> <!-- 기본 테두리 -->
        </shape>
    </item>
</selector>