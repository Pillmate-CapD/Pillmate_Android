<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 그림자 효과 -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#26000000"/> <!-- 반투명 검정 (그림자 색) -->
            <padding android:left="0.005dp" android:top="0.005dp" android:right="0.005dp" android:bottom="0.6dp"/>
        </shape>
    </item>

    <!-- 버튼 배경 -->
    <item android:top="0.3dp" android:left="0.3dp" android:right="0.3dp" android:bottom="1dp">
        <shape android:shape="oval">
            <solid android:color="#F5F6F8"/> <!-- 버튼 배경색 -->
        </shape>
    </item>
</layer-list>
