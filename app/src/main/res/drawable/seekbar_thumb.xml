<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 그림자 효과 -->
    <item>
        <shape android:shape="oval">
            <size android:width="32dp" android:height="32dp"/> <!-- 그림자 크기 -->
            <solid android:color="#12000000" /> <!-- 반투명 검정색 그림자 -->
        </shape>
    </item>

    <!-- 썸의 기본 상태 -->
    <item android:top="0.5dp" android:bottom="0.5dp" android:left="0.5dp" android:right="0.5dp"> <!-- 그림자와의 거리 설정 -->
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" /> <!-- 기본 흰색 -->
            <stroke android:width="1dp" android:color="#D9D9D9"/> <!-- 테두리 회색 -->
            <size android:width="32dp" android:height="32dp"/> <!-- 크기 설정 -->
        </shape>
    </item>

</layer-list>
