<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onboard0bg"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:background="@drawable/onboardbg"/>

    <ImageView
        android:layout_width="153dp"
        android:layout_height="59dp"
        android:layout_marginTop="67dp"
        android:layout_marginLeft="9dp"
        android:src="@drawable/onboardlogo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="반갑습니다!\n본격 앱을 시작하기 전,\n몇 가지 질문이 있어요!"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/notosanskrmedium"
        android:textSize="20dp"
        android:textColor="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16sp"
        android:paddingRight="16sp">

        <Button
            android:id="@+id/startbt"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/button_stroke_white"
            android:fontFamily="@font/notosanskrmedium"
            android:text="시작하기"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </LinearLayout>


</LinearLayout>