<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16sp"
    android:paddingTop="22sp"
    android:paddingRight="16sp"
    tools:context=".Onboard3Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/back"
                android:layout_width="32sp"
                android:layout_height="32sp"
                android:src="@drawable/back" />

            <!-- Onboarding Step -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/onboard_step_active_already"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#1E54DF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="84dp"
                    android:layout_height="2dp"
                    android:background="@drawable/onboard_gradient" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/onboard_step_active_already"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="#1E54DF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="84dp"
                    android:layout_height="2dp"
                    android:background="@drawable/onboard_gradient2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/onboard_step_active"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginLeft="60dp"
                    android:fontFamily="@font/notosanskrsemibold"
                    android:gravity="center"
                    android:text="만성질환"
                    android:textColor="#1E54DF"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginLeft="68dp"
                    android:fontFamily="@font/notosanskrsemibold"
                    android:gravity="center"
                    android:text="진단시기"
                    android:textColor="#1E54DF"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginLeft="63dp"
                    android:fontFamily="@font/notosanskrsemibold"
                    android:gravity="center"
                    android:text="증상•부작용"
                    android:textColor="#1E54DF"
                    android:textSize="11sp" />
            </LinearLayout>

            <!-- 평소 생활 시간대를 알려주세요 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:fontFamily="@font/notosanskrsemibold"
                    android:text="평소에 느끼는 증상이나\n부작용을 모두 선택해 주세요"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginTop="0sp"
                    android:fontFamily="@font/notosanskrregular"
                    android:text="증상과 부작용을 확인하고 관리해요"
                    android:textColor="#858585"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- info -->
            <LinearLayout
                android:id="@+id/symptom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="23sp">

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rowCount="6"
                    android:columnCount="3"
                    android:alignmentMode="alignMargins"
                    android:useDefaultMargins="true">

                    <!-- 각각의 버튼 -->
                    <Button
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/onboard3_btn"
                        android:text="피로감" />
                    <Button
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/onboard3_btn"
                        android:text="몸살" />
                    <Button
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/onboard3_btn"
                        android:text="근육통" />
                    <Button
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/onboard3_btn"
                        android:text="관절통" />
                    <Button
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/onboard3_btn"
                        android:text="두통" />
                    <Button
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/onboard3_btn"
                        android:text="건망증" />
                    <Button
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/onboard3_btn"
                        android:text="인후통" />
                    <Button
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/onboard3_btn"
                        android:text="기침∙가래" />
                    <Button
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/onboard3_btn"
                        android:text="호흡곤란" />
                    <Button
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/onboard3_btn"
                        android:text="두근거림" />
                    <Button
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/onboard3_btn"
                        android:text="복통" />
                    <Button
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/onboard3_btn"
                        android:text="소화불량" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="90dp"
                        android:background="@drawable/onboard3_btn"
                        android:text="구토" />
                    <Button
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/onboard3_btn"
                        android:text="변비" />
                    <Button
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/onboard3_btn"
                        android:text="불면증" />
                    <Button
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/onboard3_btn"
                        android:text="수면장애" />
                    <Button
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/onboard3_btn"
                        android:text="우울" />
                    <Button
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/onboard3_btn"
                        android:text="기타" />
                </GridLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_finish"
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_blue"
        android:fontFamily="@font/notosanskrmedium"
        android:text="다음"
        android:textColor="@color/white"
        android:textSize="15sp" />
</LinearLayout>
