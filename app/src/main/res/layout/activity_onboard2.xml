<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Onboard2Activity"
    android:paddingLeft="16sp"
    android:paddingRight="16sp"
    android:paddingTop="22sp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/back"
            android:layout_width="32sp"
            android:layout_height="32sp"
            android:src="@drawable/back"
            />
        <!-- Onboarding Step -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="5sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/onboard_step_active"
                android:textColor="@color/white"
                android:gravity="center"/>

            <View
                android:layout_width="80dp"
                android:layout_height="2dp"
                android:background="@drawable/onboard_gradient"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/onboard_step_active"
                android:textColor="@color/white"
                android:gravity="center"/>

            <View
                android:layout_width="80dp"
                android:layout_height="2dp"
                android:background="#E6E8EB"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/onboard_step_inactive"
                android:textColor="@color/black"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="0sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:fontFamily="@font/notosanskrbold"
                android:gravity="center"
                android:text="만성질환"
                android:layout_marginLeft="58dp"
                android:textColor="#1E54DF"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:fontFamily="@font/notosanskrbold"
                android:text="진단시기"
                android:layout_marginLeft="54dp"
                android:textSize="14sp"
                android:textColor="#1E54DF"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:fontFamily="@font/notosanskrregular"
                android:layout_marginLeft="50dp"
                android:text="알람 시간대"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:gravity="center"/>
        </LinearLayout>
        <!-- 만성질환을 언제부터 앓으셨는지 날짜를 알려주세요 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="언제부터 만성질환을\n앓으셨는지 날짜를 알려주세요"
                android:textAlignment="center"
                android:fontFamily="@font/notosanskrbold"
                android:textSize="20sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginTop="0sp"
                android:fontFamily="@font/notosanskrregular"
                android:text="중증도를 확인하여 건강 관리에 도움을 줘요"
                android:textSize="14sp"
                android:textColor="#858585"/>
        </LinearLayout>
        <!-- info-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="395dp"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginTop="23sp">

            <!-- 동적으로 추가할 질병 시기를 위한 컨테이너 -->
            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </LinearLayout>
        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="30sp"
            android:background="@drawable/button_blue"
            android:text="다음"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="@font/notosanskrbold"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </LinearLayout>

</LinearLayout>