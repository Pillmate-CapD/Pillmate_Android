<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AlarmActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/sfprodisplaymedium"
            android:text="12:00"
            android:textColor="@color/black"
            android:textSize="76sp" />

        <TextView
            android:id="@+id/date"
            android:layout_marginTop="-40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/notosanskrregular"
            android:text="4월 10일 수요일"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <androidx.cardview.widget.CardView
            android:layout_marginTop="40dp"
            android:id="@+id/pill_view"
            app:layout_constraintTop_toBottomOf="@id/date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/pill_img"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pill_img" />

                <TextView
                    android:id="@+id/pill_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="파스틱정 (제2형당뇨)"
                    android:fontFamily="@font/notosanskrbold"
                    android:textColor="@color/back_color"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:backgroundTint="#F5F6F8"
                    android:padding="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:layout_marginTop="40dp"
            android:id="@+id/pill_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/pill_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/notosanskrsemibold"
            android:textSize="18sp"
            android:backgroundTint="#4054D2"
            android:text="지금 약 먹으러 가기" />

        <Button
            app:layout_constraintTop_toBottomOf="@id/pill_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="11dp"
            android:id="@+id/realarm_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskrsemibold"
            android:textSize="15sp"
            android:textColor="#5F5F5F"
            android:backgroundTint="#D7D7D7"
            android:text="5분 후에 다시 알림" />

        <TextView
            android:paddingBottom="3dp"
            android:clickable="true"
            android:layout_marginTop="20dp"
            android:id="@+id/today_none_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/realarm_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="오늘은 먹지 못하나요?"
            android:fontFamily="@font/notosanskrregular"
            android:textColor="#898989"
            android:textSize="12sp"
            android:textAlignment="center"
            android:backgroundTint="#F2F2F2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>