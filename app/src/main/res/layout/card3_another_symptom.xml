<!-- card_symptom_emoji.xml -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="110dp"
    app:cardCornerRadius="35dp"
    app:cardElevation="2dp"
    android:background="#F5F6F8"
    android:id="@+id/symptom_card">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp">

        <!-- 이모지 이미지 (중앙) -->
        <ImageView
            android:id="@+id/symptom_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/onboard3btn4"
            android:layout_gravity="center"
            android:contentDescription="질병 이모지" />

        <!-- 증상 이름 텍스트 (중앙) -->
        <TextView
            android:id="@+id/symptom_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="피로감"
            android:fontFamily="@font/notosanskrmedium"
            android:includeFontPadding="false"
            android:textSize="13sp"
            android:textColor="#000000"
            android:gravity="center" />

        <!-- 체크 아이콘 (오른쪽 상단) -->
        <ImageView
            android:id="@+id/symptom_check"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/symptom_ncheck"
            android:layout_gravity="end"
            android:layout_marginTop="-75dp"
            android:layout_marginEnd="5dp"
            android:visibility="visible" /> <!-- 기본 상태에서 숨김 -->

    </LinearLayout>
</androidx.cardview.widget.CardView>