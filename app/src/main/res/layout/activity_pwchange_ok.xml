<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/pwch_ok_bg">

    <!-- 체크 이미지 -->
    <ImageView
        android:id="@+id/img_check"
        android:layout_width="203dp"
        android:layout_height="189dp"
        android:src="@drawable/checkkk"
        android:layout_marginTop="107dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 제목 텍스트 -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 변경 완료"
        android:fontFamily="@font/notosanskrbold"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="115dp"/>

    <!-- 설명 텍스트 -->
    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호가 성공적으로 변경되었어요\n안전한 이용을 위해 다시 로그인해 주세요!"
        android:fontFamily="@font/notosanskrmedium"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:includeFontPadding="false"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/img_check"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="62dp"/>

    <!-- 확인 버튼 -->
    <Button
        android:id="@+id/btn_register"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:text="확인"
        android:background="@drawable/button_white_10"
        android:textColor="#1E54DF"
        android:textSize="15sp"
        android:fontFamily="@font/notosanskrsemibold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
