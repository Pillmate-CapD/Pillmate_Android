<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/onon_bg">

    <!-- 상단 설명 텍스트 -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AI 인식을 통해\n나의 약을 손쉽게 저장해 보세요!"
        android:textSize="21sp"
        android:fontFamily="@font/notosanskrbold"
        android:textColor="#3E3E3E"
        android:includeFontPadding="false"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginTop="88dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알약, 처방전 모두 인식 가능해요"
        android:textSize="13sp"
        android:fontFamily="@font/notosanskrregular"
        android:includeFontPadding="false"
        android:textColor="#898989"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="9dp" />

    <!-- 약 정보 카드 이미지 1 -->
    <ImageView
        android:id="@+id/medicine_card1"
        android:layout_width="278dp"
        android:layout_height="206dp"
        android:src="@drawable/onon_1_img"
        android:scaleType="fitXY"
        android:layout_marginTop="129dp"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 하단 페이지 인디케이터 -->
    <LinearLayout
        android:id="@+id/indicator_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="156dp"
        app:layout_constraintTop_toBottomOf="@id/medicine_card1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/onon_circle_blue"
            android:layout_marginEnd="12dp" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/onoon_circle_gray"
            android:layout_marginEnd="12dp" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/onoon_circle_gray"
            android:layout_marginEnd="12dp"/>
        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/onoon_circle_gray" />
    </LinearLayout>

    <!-- 하단 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:layout_marginTop="46dp"
        app:layout_constraintTop_toBottomOf="@id/indicator_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/btn_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="건너뛰기"
            android:textSize="15sp"
            android:fontFamily="@font/notosanskrregular"
            android:includeFontPadding="false"
            android:textColor="#3E3E3E"
            android:layout_weight="1"
            android:gravity="start" />

        <TextView
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음"
            android:textSize="15sp"
            android:fontFamily="@font/notosanskrregular"
            android:includeFontPadding="false"
            android:textColor="#3E3E3E"
            android:layout_weight="1"
            android:gravity="end" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
