<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMediFinActivity"
    android:background="#1E54DF">

    <View
        android:layout_width="190dp"
        android:layout_height="280dp"
        android:layout_marginTop="-20dp"
        android:background="@drawable/ic_symbol"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_1" />

    <ImageView
        android:id="@+id/img_check"
        android:layout_width="203dp"
        android:layout_height="189dp"
        android:src="@drawable/checkkk"
        android:layout_marginTop="107dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 제목 텍스트 -->
    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="약 등록 완료"
        android:fontFamily="@font/notosanskrbold"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="115dp"/>

    <!-- 설명 텍스트 -->
    <TextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="추가된 약은 [약 보관함]에서 확인할 수 있어요\n언제든지 확인하고 건강을 관리해보세요!"
        android:fontFamily="@font/notosanskrmedium"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:includeFontPadding="false"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/img_check"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="62dp"/>


    <!-- 확인 버튼 -->
    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:text="확인"
        android:clickable="true"
        android:background="@drawable/button_white_10"
        android:textColor="#1E54DF"
        android:textSize="15sp"
        android:fontFamily="@font/notosanskrsemibold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="50dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>