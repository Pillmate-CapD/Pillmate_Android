<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_pop_round16"
    android:elevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingLeft="16dp"
        android:id="@+id/btn_pop_edit"
        android:paddingTop="16dp"
        android:paddingBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="157dp"
        android:layout_height="wrap_content">

        <View
            android:background="@drawable/ic_pop_edit"
            android:id="@+id/ic_pop_edit"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_pop_edit"
            app:layout_constraintStart_toEndOf="@id/ic_pop_edit"
            app:layout_constraintBottom_toBottomOf="@id/ic_pop_edit"
            app:layout_constraintTop_toTopOf="@id/ic_pop_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/notosanskrmedium"
            android:textColor="#3E3E3E"
            android:includeFontPadding="false"
            android:text="수정하기"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingLeft="16dp"
        android:id="@+id/btn_pop_del"
        android:paddingTop="10dp"
        android:paddingBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_pop_edit"
        android:layout_width="157dp"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/ic_pop_del"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/ic_pop_del"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_pop_del"
            app:layout_constraintStart_toEndOf="@id/ic_pop_del"
            app:layout_constraintTop_toTopOf="@id/ic_pop_del"
            app:layout_constraintBottom_toBottomOf="@id/ic_pop_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/notosanskrmedium"
            android:textColor="#FF453A"
            android:includeFontPadding="false"
            android:text="삭제하기"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>