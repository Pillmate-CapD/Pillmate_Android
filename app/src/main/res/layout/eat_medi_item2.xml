<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/step2"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:text="2"
            android:textSize="15sp"
            android:background="@drawable/eatmedi_open"
            android:textColor="#1E54DF"
            android:gravity="center"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/b_step_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13sp"
            android:fontFamily="@font/notosanskrsemibold"
            android:includeFontPadding="false"
            android:text="약 확인하기"
            android:textColor="#000000"
            android:textSize="18sp"
            android:visibility="visible"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:background="@drawable/eatmedi_button1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/step_check"
                android:layout_width="26sp"
                android:layout_height="26sp"
                android:src="@drawable/eatmedi_checkcheck"
                android:visibility="gone"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="17dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/step2_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="17dp"
                android:textStyle="bold"
                android:background="@drawable/eatmedi_open"
                android:textColor="#1E54DF"
                android:gravity="center"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/step_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="약 확인하기"
                android:textColor="#1C1C1C"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                android:fontFamily="@font/notosanskrsemibold"
                android:layout_marginLeft="10sp"
                android:visibility="gone"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/step_content2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/medicheck_image"
                android:layout_width="match_parent"
                android:layout_height="288dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:src="@drawable/eatmedi_sample_d2"/>

            <TextView
                android:id="@+id/step2_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16sp"
                android:fontFamily="@font/notosanskrmedium"
                android:text="당뇨약 파스틱정이 맞아요!"
                android:textColor="#3e3e3e"
                android:includeFontPadding="false"
                android:textSize="15sp" />
            <Button
                android:id="@+id/step_button2"
                android:background="@drawable/button_blue"
                android:text="다음으로"
                android:fontFamily="@font/notosanskrmedium"
                android:layout_marginRight="19dp"
                android:layout_marginLeft="19dp"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16sp"
                android:includeFontPadding="false"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"/>


        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/line"
        android:layout_width="12sp"
        android:layout_height="0sp"/>
</LinearLayout>