<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/step4"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:text="4"
            android:textSize="15sp"
            android:background="@drawable/eatmedi_open"
            android:textColor="#FF453A"
            android:gravity="center"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/b_step_title4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13sp"
            android:fontFamily="@font/notosanskrsemibold"
            android:includeFontPadding="false"
            android:text="다음 약 일정 확인하기"
            android:textColor="#000000"
            android:textSize="18sp"
            android:visibility="visible"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:background="@drawable/eatmedi_button1">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/step_check"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:src="@drawable/eatmedi_checkcheck"
            android:visibility="gone"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="17dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/step4_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="17dp"
            android:background="@drawable/eatmedi_open"
            android:textColor="#FF453A"
            android:gravity="center"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/step_title4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음 약 일정 확인하기"
            android:textColor="#1C1C1C"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:fontFamily="@font/notosanskrsemibold"
            android:layout_marginLeft="10sp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/step_content4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/timecheck"
            android:layout_width="124dp"
            android:layout_height="121dp"
            android:layout_gravity="center"
            android:src="@drawable/eatmedi_calendersample"/>

        <TextView
            android:id="@+id/step4_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/notosanskrmedium"
            android:layout_marginLeft="20dp"
            android:includeFontPadding="false"
            android:text="다음에 먹을 약은\n오늘 오후 7시 30분 당뇨약 ‘파스타정'\n이에요"
            android:textColor="#3e3e3e"
            android:textSize="15sp" />
        <Button
            android:id="@+id/step_button4"
            android:background="@drawable/button_blue"
            android:text="확인했어요"
            android:fontFamily="@font/notosanskrbold"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="19dp"
            android:layout_marginLeft="19dp"
            android:includeFontPadding="false"
            android:layout_marginTop="16sp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>
    </LinearLayout>
</LinearLayout>