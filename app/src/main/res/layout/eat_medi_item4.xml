<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="30dp">
    <LinearLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:background="@drawable/button_stroke_blue">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/step4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textColor="#3e3e3e"
            android:textSize="16sp"
            android:background="@drawable/eatmedi_active"
            android:gravity="center"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:id="@+id/step_check"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:src="@drawable/check"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/step_title4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음 약 일정 확인하기"
            android:textColor="#3e3e3e"
            android:textSize="14sp"
            android:fontFamily="@font/notosanskrsemibold"
            android:layout_marginLeft="19sp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/step_content4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/timecheck"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/timecheck"/>

        <TextView
            android:id="@+id/step4_description"
            android:layout_width="wrap_content"
            android:layout_height="79dp"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:fontFamily="@font/notosanskrregular"
            android:text="다음에 먹을 약은\n오늘 오후 7시 30분\n당뇨약 ‘파스타정'이에요!"
            android:textAlignment="center"
            android:textColor="#3e3e3e"
            android:textSize="16sp" />
        <Button
            android:id="@+id/step_button4"
            android:background="@drawable/button_blue"
            android:text="확인 완료"
            android:fontFamily="@font/notosanskrbold"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_width="296sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="19sp"
            android:layout_gravity="center"/>

    </LinearLayout>
    </LinearLayout>
</LinearLayout>