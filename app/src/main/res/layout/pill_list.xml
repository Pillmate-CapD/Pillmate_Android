<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="12dp"
    android:paddingLeft="12dp"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/custom_pill_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/pill_list_time"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오전 7:00"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/notosanskrbold"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/pill_list_time"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="-18dp"
        android:id="@+id/pill_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="트윈스타정"
        android:textColor="@color/back_color"
        android:textSize="12sp"
        android:fontFamily="@font/notosanskrsemibold"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/pill_list_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지금 먹으러 가기"
            android:textColor="#3E3E3E"
            android:textSize="14sp"
            android:fontFamily="@font/notosanskrbold"/>

        <View
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/pill_list_go"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/pill_go"/>

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>