<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:background="@drawable/ic_pill_df"
        android:layout_marginLeft="16dp"
        android:id="@+id/img_pill"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:layout_marginTop="3dp"
        android:layout_marginLeft="19dp"
        android:id="@+id/pill_list_time"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_pill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오전 7:00"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/notosanskrbold"/>

    <TextView
        android:layout_marginLeft="19dp"
        app:layout_constraintTop_toBottomOf="@id/pill_list_time"
        app:layout_constraintStart_toEndOf="@id/img_pill"
        android:layout_marginTop="-18dp"
        android:id="@+id/pill_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="트윈스타정"
        android:textColor="@color/back_color"
        android:textSize="12sp"
        android:fontFamily="@font/notosanskrsemibold"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        
        <View
            android:layout_width="89dp"
            android:layout_height="33dp"
            android:id="@+id/bt_eat_done"
            android:background="@drawable/bt_eat_done"
            android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <View
            android:layout_width="89dp"
            android:layout_height="33dp"
            android:id="@+id/bt_eat_now"
            android:background="@drawable/bt_eat_now"
            android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <View
            android:layout_width="89dp"
            android:layout_height="33dp"
            android:id="@+id/bt_eat_will"
            android:background="@drawable/bt_eat_will"
            android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

