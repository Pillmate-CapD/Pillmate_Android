<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="18dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/home_alarm_img"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/circle_view"
        android:backgroundTint="#D9D9D9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginLeft="20dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/home_alarm_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="-10dp"
            android:id="@+id/alarm_type"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="복약알림"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/notosanskrmedium"/>

        <TextView
            android:layout_marginTop="-18dp"
            android:id="@+id/alarm_des"
            app:layout_constraintTop_toBottomOf="@id/alarm_type"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="'파스틱정'을 먹을 시간이에요"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/notosanskrmedium"/>

        <TextView
            android:layout_marginTop="-18dp"
            android:id="@+id/alarm_des_time"
            app:layout_constraintTop_toBottomOf="@id/alarm_des"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="'방금 전"
            android:textColor="#898989"
            android:textSize="12sp"
            android:fontFamily="@font/notosanskrmedium"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <View
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F3F3F3"/>

</androidx.constraintlayout.widget.ConstraintLayout>