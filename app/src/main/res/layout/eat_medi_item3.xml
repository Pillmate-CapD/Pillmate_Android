<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:background="@drawable/button_stroke_blue">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/step3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="16sp"
            android:background="@drawable/eatmedi_active"
            android:textColor="#3e3e3e"
            android:gravity="center"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:id="@+id/step_check"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:src="@drawable/check"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/step_title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="약 복용하기"
            android:textColor="#3e3e3e"
            android:textSize="16sp"
            android:fontFamily="@font/notosanskrsemibold"
            android:layout_marginLeft="10sp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/step_content3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_marginTop="0dp">

        <ImageView
            android:id="@+id/medieat_image"
            android:layout_width="116dp"
            android:layout_height="116dp"
            android:layout_gravity="center"
            android:src="@drawable/eatmedi"/>

        <TextView
            android:id="@+id/step3_description"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:text="이제 물과 함께 복용해 주세요!"
            android:textColor="#3e3e3e"
            android:fontFamily="@font/notosanskrbold"
            android:layout_marginTop="5sp"
            android:textSize="16sp"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/step_button3"
            android:background="@drawable/button_blue"
            android:text="약 먹었어요!"
            android:fontFamily="@font/notosanskrbold"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_width="296sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="19sp"
            android:layout_gravity="center"/>

        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/line"
        android:layout_width="12sp"
        android:layout_height="12sp"
        android:src="@drawable/line"
        android:layout_marginLeft="20dp"/>
</LinearLayout>