<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/step1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@drawable/eatmedi_open"
            android:textColor="#FF453A"
            android:gravity="center"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/b_step_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:fontFamily="@font/notosanskrsemibold"
            android:text="먹을 약 인증하기"
            android:textColor="#000000"
            android:textSize="18sp"
            android:visibility="visible"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:background="@drawable/eatmedi_button1">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/step_check"
            android:layout_width="26sp"
            android:layout_height="26sp"
            android:src="@drawable/eatmedi_checkcheck"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/step_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:fontFamily="@font/notosanskrsemibold"
            android:text="먹을 약 인증하기"
            android:textColor="#1C1C1C"
            android:visibility="gone"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/step1_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:fontFamily="@font/notosanskrbold"
            android:text="파스틱정 (제2형당뇨)"
            android:textColor="#3e3e3e"
            android:visibility="visible"
            android:textSize="15sp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/step_content1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_marginTop="0dp">

        <ImageView
            android:id="@+id/medi_image"
            android:layout_width="426dp"
            android:layout_height="228dp"
            android:layout_gravity="center"
            android:src="@drawable/eatmedi_sample_d1" />

        <Button
            android:id="@+id/step_button1"
            android:background="@drawable/button_blue"
            android:text="카메라 촬영하기"
            android:fontFamily="@font/notosanskrmedium"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19sp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/pass1"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:fontFamily="@font/notosanskrmedium"
            android:text="인증 건너뛰기"
            android:textColor="#1E54DF"
            android:textSize="13sp" />
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/important"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="11dp"
        android:background="@drawable/eatmedi_bt1_important">
        <ImageView
            android:id="@+id/important_img"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/eatmedi1_import"
            android:gravity="center"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/important_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9sp"
            android:fontFamily="@font/notosanskrsemibold"
            android:text="해당 약을 촬영하면 맞는지 확인해 드려요"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:visibility="visible"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/line"
        android:layout_width="12sp"
        android:layout_height="25sp"/>

</LinearLayout>
