<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/pwch_ok_bg">

    <!-- 체크 이미지 -->
    <ImageView
        android:layout_width="220.25dp"
        android:layout_height="266.93dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="-60dp"
        android:src="@drawable/check_bgbg_l"/>
    <ImageView
        android:id="@+id/img_check"
        android:layout_width="203dp"
        android:layout_height="189dp"
        android:src="@drawable/checkkk"
        android:layout_marginTop="107dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 제목 텍스트 -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="건강일지 수정 완료"
        android:fontFamily="@font/notosanskrbold"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="115dp"/>

    <!-- 설명 텍스트 -->
    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수정된 내용은 건강 기록에서 확인할 수 있어요\n필요 시, 다시 수정도 가능해요!"
        android:fontFamily="@font/notosanskrmedium"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:includeFontPadding="false"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/img_check"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="62dp"/>
    <TextView
        android:id="@+id/tv_description2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="건강기록 → 건강일지"
        android:fontFamily="@font/notosanskrregular"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        android:includeFontPadding="false"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/tv_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"/>
    <!-- 밑줄 View -->
    <View
        android:layout_width="113dp"
        android:layout_height="0.8dp"
        android:layout_marginTop="0dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/tv_description2"
        app:layout_constraintStart_toStartOf="@id/tv_description2"
        app:layout_constraintEnd_toEndOf="@id/tv_description2"/>

    <!-- 확인 버튼 -->
    <Button
        android:id="@+id/btn_register"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:text="확인"
        android:background="@drawable/button_white_10"
        android:textColor="#1E54DF"
        android:textSize="15sp"
        android:fontFamily="@font/notosanskrsemibold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>