<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Onboard1Activity"
    android:paddingLeft="16sp"
    android:paddingRight="16sp"
    android:paddingTop="22sp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_next"
        android:layout_height="0dp"
        android:orientation="vertical">
        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            />
        <!-- Onboarding Step -->
        <LinearLayout
            android:id="@+id/layout_step"
            app:layout_constraintTop_toBottomOf="@id/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="4sp">

            <TextView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:text="1"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="14sp"
                android:background="@drawable/onboard_step_active"
                android:textColor="@color/white"
                android:gravity="center"/>

            <View
                android:layout_width="80dp"
                android:layout_height="2dp"
                android:background="#F5F6F8"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="14sp"
                android:background="@drawable/onboard_step_inactive"
                android:textColor="@color/black"
                android:gravity="center"/>

            <View
                android:layout_width="80dp"
                android:layout_height="2dp"
                android:background="#F5F6F8"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="14sp"
                android:background="@drawable/onboard_step_inactive"
                android:textColor="@color/black"
                android:gravity="center"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_step_tv"
            app:layout_constraintTop_toBottomOf="@id/layout_step"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="0sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="만성질환"
                android:fontFamily="@font/notosanskrsemibold"
                android:layout_marginLeft="63dp"
                android:textColor="#1E54DF"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskrsemibold"
                android:text="진단시기"
                android:layout_marginLeft="64dp"
                android:textSize="11sp"
                android:textColor="@color/black"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="62dp"
                android:fontFamily="@font/notosanskrsemibold"
                android:text="알람 시간대"
                android:textSize="11sp"
                android:textColor="@color/black"
                android:gravity="center"/>
        </LinearLayout>
        <!-- 현재 앓고 있는 만성질환을 선택해 주세요 -->
        <LinearLayout
            android:id="@+id/layout_title"
            app:layout_constraintTop_toBottomOf="@id/layout_step_tv"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="25dp"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_onboard_Title"
                android:layout_marginTop="-15dp"
                android:fontFamily="@font/notosanskrbold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현재 앓고 있는 만성질환을\n선택해주세요"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_onboard_subTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-16dp"
                android:fontFamily="@font/notosanskrregular"
                android:text="만성질환별로 약을 카테고리화해줘요"
                android:textColor="#858585"
                android:textSize="13sp" />
        </LinearLayout>
        <!-- 그리드(버튼들) -->
        <GridLayout
            app:layout_constraintTop_toBottomOf="@id/layout_title"
            android:visibility="visible"
            android:layout_marginTop="27dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="3"
            android:columnCount="2"
            android:layout_gravity="center">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1">

                <include
                    android:id="@+id/card1"
                    layout="@layout/onboard_button"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnWeight="1">

                <include
                    android:id="@+id/card2"
                    layout="@layout/onboard_button"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnWeight="1">

                <include
                    android:id="@+id/card3"
                    layout="@layout/onboard_button"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnWeight="1">

                <include
                    android:id="@+id/card4"
                    layout="@layout/onboard_button"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnWeight="1">

                <include
                    android:id="@+id/card5"
                    layout="@layout/onboard_button"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_columnWeight="1">

                <include
                    android:id="@+id/card6"
                    layout="@layout/onboard_button"/>
            </FrameLayout>

        </GridLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:fontFamily="@font/notosanskrbold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/button_blue"
        android:text="다음"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>